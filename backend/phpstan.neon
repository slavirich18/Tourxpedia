# backend/phpstan.neon
includes:
    - vendor/larastan/larastan/extension.neon

parameters:
    # Ниво: започваме на 6/7 за баланс между шум и стойност
    level: 7

    # Папки за анализ
    paths:
        - app
        - database

    # Кеш директория (избягваме bootstrap/cache)
    tmpDir: storage/framework/cache/phpstan

    # Полезни настройки за Laravel проекти
    checkMissingIterableValueType: false
    inferPrivatePropertyTypeFromConstructor: true

    # Larastan специфични (ако ползваш модели/магични пропъртита)
    checkModelProperties: true

    # По желание: добави файлове за по-точен анализ на bootstrapping
    scanFiles:
        - bootstrap/app.php